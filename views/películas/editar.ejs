            <form action="/peliculas/<%= pelicula._id %>?_method=PUT" method="post">

                <div class="form-group">
                    <input class="form-control" type="text" name="pelicula[nombre]" value="<%= pelicula.nombre %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pelicula[imagen]" value="<%= pelicula.imagen %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pelicula[descripcion]"
                        value="<%= pelicula.descripcion %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Guardar</button>
                </div>

            </form>
